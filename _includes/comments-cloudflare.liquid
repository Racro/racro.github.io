<div class="poem-comments" id="comments-section">
  <div class="reactions-section">
    <button id="reaction-like" class="reaction-btn" aria-label="Like this poem">
      <span class="reaction-icon">üëç</span>
      <span id="reaction-like-count" class="reaction-count">0</span>
    </button>
    <button id="reaction-loved" class="reaction-btn" aria-label="Love this poem">
      <span class="reaction-icon">‚ù§Ô∏è</span>
      <span id="reaction-loved-count" class="reaction-count">0</span>
    </button>
  </div>
  
  <h3 class="comments-title">Comments</h3>
  
  <div id="comments-container" class="comments-list">
    <p class="comments-loading">Loading comments...</p>
  </div>

  <form id="comment-form" class="comment-form">
    <div id="comment-message" class="comment-message"></div>
    
    <div class="comment-form-row">
      <div class="comment-form-group">
        <label for="comment-name">Name (optional)</label>
        <input type="text" id="comment-name" name="name" placeholder="Your name" class="comment-input">
      </div>
      <div class="comment-form-group">
        <label for="comment-email">Email (optional, not displayed)</label>
        <input type="email" id="comment-email" name="email" placeholder="your@email.com" class="comment-input">
      </div>
    </div>
    
    <div class="comment-form-group">
      <label for="comment-text">Comment</label>
      <textarea id="comment-text" name="comment" rows="4" placeholder="Share your thoughts..." class="comment-textarea" required></textarea>
    </div>
    
    <button type="submit" id="comment-submit" class="comment-submit">Submit Comment</button>
  </form>
</div>

<script>
  window.COMMENTS_CONFIG = {
    workerUrl: '{{ site.cloudflare_worker_url }}'
  };
</script>
<script src="{{ '/assets/js/reactions-widget.js' | relative_url }}" defer></script>
<script src="{{ '/assets/js/comments-widget.js' | relative_url }}" defer></script>

